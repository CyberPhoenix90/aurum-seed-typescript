{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "module": "esnext",
        "target": "es2017",
        "esModuleInterop": true,
        "jsxFactory": "Aurum.factory",
        "jsxFragmentFactory": "Aurum.fragment",
        "jsx": "react",
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.tsx", "test/**/*.ts"]
}
